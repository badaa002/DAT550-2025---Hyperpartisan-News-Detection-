{
    "data": {
        "data_dir": "../data",
        "preprocessed_data_path": "../data/preprocessed/byarticle_clean.tsv",
        "test_size": 0.2,
        "random_state": 0,
        "max_length": 512
    },
    "model": {
        "base_model": "xlm-roberta-base",
        "alternative_base_model": "xlm-roberta-large",
        "num_labels": 2,
        "classifier_dropout": 0.3
    },
    "training": {
        "output_dir": "../models",
        "learning_rate": 2e-5,
        "batch_size": 16,
        "eval_batch_size": 16,
        "epochs": 8,
        "weight_decay": 0.01,
        "evaluation_strategy": "epoch",
        "save_strategy": "epoch",
        "load_best_model_at_end": true,
        "metric_for_best_model": "f1",
        "save_total_limit": 2,
        "early_stopping_patience": 3
    },
    "cross_validation": {
        "n_splits": 5,
        "shuffle": true,
        "random_state": 0
    },
    "class_balancing": {
        "use_balancing": true,
        "method": "oversample"
    },
    "inference": {
        "threshold": 0.5
    }
}